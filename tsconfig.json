{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext", "DOM"],
    "module": "nodenext",
    "declaration": true,
    "verbatimModuleSyntax": true,
    "erasableSyntaxOnly": true,
    "outDir": "dist/src",
    "rootDir": "src",
    "noPropertyAccessFromIndexSignature": false,
    "exactOptionalPropertyTypes": false,

    "jsx": "react-jsx",
    "paths": {
      "#/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
